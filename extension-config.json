{
  "version": "1.0.0",
  "id": "@shopgate-project/smile-io",
  "components": [
    {
      "id": "subscriptions",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    },
    {
      "id": "smileDataDigest",
      "path": "frontend/reducers/simileDataDigest.js",
      "type": "reducers"
    },
    {
      "id": "SmileContainer",
      "type": "portals",
      "path": "frontend/portals/SmileContainer",
      "target": "view.content.after"
    }
  ],
  "configuration": {
    "smileApiSecret": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "Smile api secret",
        "type": "text",
        "required": true
      }
    },
    "smileChannelApiKey": {
      "type": "admin",
      "destination": "both",
      "default": "",
      "params": {
        "label": "Smile channel API key",
        "type": "text",
        "required": true
      }
    },
    "smileJavascriptSdkSrc": {
      "type": "admin",
      "destination": "frontend",
      "default": "https://cdn.sweettooth.io/assets/storefront.js",
      "params": {
        "label": "Smile Javascript SDK script src",
        "type": "text",
        "required": true
      }
    },
    "sweettoothInitEndpoint": {
      "type": "admin",
      "destination": "frontend",
      "default": "https://cdn.sweettooth.io/v1/storefront_js/init",
      "params": {
        "label": "Smile Javascript SDK script src",
        "type": "text",
        "required": true
      }
    },
    "webCheckout": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value"
      }
    }
  },
  "steps": []
}
