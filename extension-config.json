{
  "version": "1.0.0",
  "id": "@shopgate-project/smile-io",
  "components": [
    {
      "id": "subscriptions",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    },
    {
      "id": "smileDataDigest",
      "path": "frontend/reducers/simileDataDigest.js",
      "type": "reducers"
    },
    {
      "id": "SmileContainer",
      "type": "portals",
      "path": "frontend/portals/SmileContainer",
      "target": "view.content.after"
    }
  ],
  "configuration": {
    "smileApiSecret": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "Smile api secret",
        "type": "text",
        "required": true
      }
    },
    "smileChannelApiKey": {
      "type": "admin",
      "destination": "both",
      "default": "",
      "params": {
        "label": "Smile channel API key",
        "type": "text",
        "required": true
      }
    },
    "smileJavascriptSdkSrc": {
      "type": "admin",
      "destination": "frontend",
      "default": "https://cdn.sweettooth.io/assets/storefront.js",
      "params": {
        "label": "Smile Javascript SDK script src",
        "type": "text",
        "required": true
      }
    },
    "isLegacyCheckout": {
      "type": "admin",
      "destination": "backend",
      "default": false,
      "params": {
        "label": "true if web checkout not being used",
        "type": "checkbox"
      }
    }
  },
  "steps": []
}
