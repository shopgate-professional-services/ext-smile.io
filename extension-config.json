{
  "version": "1.0.0",
  "id": "@shopgate-project/smile-io",
  "components": [
    {
      "id": "smileLoginRoute",
      "path": "frontend/pages/smileLoginRoute/index.jsx",
      "target": "app.routes",
      "type": "portals"
    },
    {
      "id": "waysToEarnRoute",
      "path": "frontend/pages/waysToEarnRoute/index.jsx",
      "target": "app.routes",
      "type": "portals"
    },
    {
      "id": "waysToSpendRoute",
      "path": "frontend/pages/waysToSpend/index.jsx",
      "target": "app.routes",
      "type": "portals"
    },
    {
      "id": "pointsProducts",
      "path": "frontend/reducers/pointsProducts.js",
      "type": "reducers"
    },
    {
      "id": "subscriptions",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    }
  ],
  "configuration": {
    "shopifyAlias": {
      "type": "bigApi",
      "destination": "both",
      "default": "",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.alias"
      }
    },
    "imageSrcs": {
      "type": "admin",
      "destinatoin": "frontend",
      "default": {
        "waysToEarn": "https://cdn.sweettooth.io/v1/images/earn-more-points.svg?color=%23000000&theme=light",
        "waysToSpend": "https://cdn.sweettooth.io/v1/images/spend-your-points.svg?color=%23000000&theme=light"
      },
      "params": {
        "label": "Configuration for image source locations",
        "type": "json"
      }
    },
    "colorConfig": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "headerBackground": "blue",
        "headerFontColor": "white",
        "buttonBackground": "blue",
        "buttonFontColor": "white",
        "contentBackground": "white",
        "svgAccent": "blue"
      },
      "params": {
        "label": "Configuration for colors",
        "type": "json"
      }
    },
    "loginPageText": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "headerText": {
          "secondaryText": "Welcome To",
          "primaryText": "Merlin's magnificent magic shop"
        },
        "pointsText": {
          "header": "Points",
          "paragraph": "Earn more Points for different actions, and turn those Points into awesome rewards!"
        },
        "memberText": {
          "header": "Become a member",
          "paragraph": "With more ways to unlock exciting perks, this is your all access pass to exclusive rewards."
        }
      },
      "params": {
        "label": "Configuration for login page text",
        "type": "json"
      }
    },
    "waysToSpend": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "appBarTitle": "Ways to Spend",
        "header": "Ways to spend"
      },
      "params": {
        "label": "Configuration for ways to spend page",
        "type": "json"
      }
    },
    "waysToEarn": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "appBarTitle": "Shop title goes here?",
        "header": "Ways to earn",
        "options": [
          {
            "img": "https://cdn.sweettooth.io/v1/images/earning/order-online.svg?color=%23000000&theme=light",
            "text": "Place an order",
            "pointsText": "1 Point for every $1 spent"
          },
          {
            "img": "https://cdn.sweettooth.io/v1/images/earning/signup.svg?color=%23000000&theme=light",
            "text": "Signup",
            "pointsText": "200 points"
          },
          {
            "img": "https://cdn.sweettooth.io/v1/images/earning/birthday.svg?color=%23000000&theme=light",
            "text": "Celebrate a birthday",
            "pointsText": "200 points"
          }
        ]
      },
      "params": {
        "label": "Congifuration for ways to earn",
        "type": "json"
      }
    },
    "smileApiUrl": {
      "type": "admin",
      "destination": "backend",
      "default": "https://api.sweettooth.io/v1",
      "params": {
        "label": "Smile api url endpoint",
        "type": "text",
        "required": true
      }
    },
    "smileApiSecret": {
      "type": "admin",
      "destination": "backend",
      "default": "sk_AKsXCa4sWSxdzs9MkixvJAo2",
      "params": {
        "label": "Smile api secret",
        "type": "text",
        "required": true
      }
    },
    "smileChannelApiKey": {
      "type": "admin",
      "destination": "both",
      "default": "pk_ETsDtPcppst3fQirFGDUy7aE",
      "params": {
        "label": "Smile channel API key",
        "type": "text",
        "required": true
      }
    },
    "smileJavascriptSdkSrc": {
      "type": "admin",
      "destination": "frontend",
      "default": "https://cdn.sweettooth.io/assets/storefront.js",
      "params": {
        "label": "Smile Javascript SDK script src",
        "type": "text",
        "required": true
      }
    }
  },
  "steps": []
}